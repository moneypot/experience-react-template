{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install --prefer-offline"
    }
  ],
  "tasks": {
    "dev": {
      // This avoids CodeSandbox's popup asking if it should indeed use this port every time.
      "name": "Dev Server",
      "command": "pnpm dev",
      "runAtStart": true,
      "preview": {
        "port": 5173
      }
    },
    "check": {
      "name": "Type Check",
      "command": "pnpm check"
    },
    "lint": {
      "name": "Lint",
      "command": "pnpm lint"
    },
    "codegen": {
      "name": "GraphQL Codegen",
      "command": "pnpm codegen"
    },
    "build": {
      "name": "Build",
      "command": "pnpm build"
    }
  }
}
